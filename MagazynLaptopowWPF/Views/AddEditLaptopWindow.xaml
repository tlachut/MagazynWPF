<Window x:Class="MagazynLaptopowWPF.Views.AddEditLaptopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagazynLaptopowWPF.Views"
        xmlns:vm="clr-namespace:MagazynLaptopowWPF.ViewModels"
        mc:Ignorable="d"
        Title="Dodaj/Edytuj Laptop" Height="350" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Marka -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Marka:" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Laptop.Marka}" Margin="0,0,0,5"/>

        <!-- Model -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Model:" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Laptop.Model}" Margin="0,0,0,5"/>

        <!-- System Operacyjny -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="System Operacyjny:" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Laptop.SystemOperacyjny}" Margin="0,0,0,5"/>

        <!-- Rozmiar Ekranu -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Rozmiar Ekranu:" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Laptop.RozmiarEkranu}" Margin="0,0,0,5"/>

        <!-- Ilosc -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Ilosc:" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Laptop.Ilosc}" Margin="0,0,0,5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Zapisz" Click="SaveButton_Click" IsDefault="True" MinWidth="80" Margin="0,0,10,0"/>
            <Button Content="Anuluj" IsCancel="True" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>